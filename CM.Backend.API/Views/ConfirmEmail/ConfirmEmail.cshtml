@model CM.Backend.API.Views.ConfirmEmail.ConfirmEmailResponseModel

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<!------ Include the above in your HEAD tag ---------->

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<div class="form-gap" style="margin-top: 70px"></div>
<div class="container">
    <div class="row">
        <iframe width="0" height="0" border="0" name="dummyframe" id="dummyframe"></iframe>
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa fa-envelope fa-4x"></i></h3>
                        <h2 id="header" class="text-center">Email confirmation went wrong</h2>
                        <p id="resultId">The following error was caused by:</p>
                        <p style="margin-top: 1em"></p>
                        <p>@Model.Message</p>
                        <p style="margin-top: 1em"></p>
                        <p></p>
                        <div class="panel-body" id="Succes">
                            <img src="~/images/Succes.png" style="height: 100px; width: 100px" />
                        </div>
                        <div class="panel-body" id="Error">
                            <img src="~/images/Error.png" style="height: 100px; width: 100px" />
                        </div>
                        <div id="divResult">
                            <p id="errorMsg" style="color: #C77966"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">$(document).ready(function() {

    $("#Succes").hide();
    $("#Error").hide();
    $("#header").text("");
    $("#resultId").text("");

    var model = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model))
    
    if (model.IsSuccesfull) {
        $("#Succes").show();
        $("#header").text("Email confirmation succesfull!");
        $("#resultId").text("See you in the App!");
    } else {
        $("#Error").show();
        $("#header").text("Email confirmation went wrong");
        $("#resultId").text("The following error was caused by:");
    } 
});</script>
